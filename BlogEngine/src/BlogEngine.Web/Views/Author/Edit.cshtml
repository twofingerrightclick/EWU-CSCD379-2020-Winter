@model Author

<form asp-route="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="field">
        <label class="label" asp-for="FirstName">First Name</label>
        <div class="control">
            <input class="input" type="text" asp-for="FirstName" />
        </div>
    </div>
    <div class="field">
        <label class="label" asp-for="LastName">Last Name</label>
        <div class="control">
            <input class="input" type="text" asp-for="LastName" />
        </div>
    </div>
    <div class="field">
        <label class="label" asp-for="Email">Email Address</label>
        <div class="control">
            <input class="input" type="text" asp-for="Email" />
        </div>
    </div>
    <div class="field is-grouped">
        <div class="control">
            <button class="button is-primary">Submit</button>
        </div>
        <div class="control">
            <a asp-action="Index" class="button is-light">Cancel</a>
        </div>
    </div>
</form>